version: "3.6"

networks:
  apps:
    driver: overlay
    external: true
 
services:
  # GOCD
  # Master to be deployed in Swarm manager node
  gocd-server:
    image: gocd/gocd-server:v19.11.0
    ports:
      - "8153:8153"
    dns: 8.8.8.8
    networks:
      - apps
    deploy:
      placement:
        constraints:
          - node.role == manager
      resources:
        limits:
          cpus: '0.80'
          memory: 1024M
        reservations:
          cpus: '0.10'
          memory: 20M
  go-agent:
    image: gocd/gocd-agent-ubuntu-16.04:v19.11.0
    environment:
      GO_SERVER_URL: https://gocd-server:8154/go
    networks:
      - apps
    deploy:
      mode: replicated
      replicas: 1
      resources:
        limits:
          cpus: '0.80'
          memory: 1024M
